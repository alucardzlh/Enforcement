<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment1_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="91dp"
            android:src="@drawable/my_icon2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:src="@drawable/white_line" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="146dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/text_search"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业名称查询" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/ewm_search"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="扫码查询" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_text"
                style="@style/searchText"
                android:layout_width="370dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:hint="请输入企业名称"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:lines="1"
                android:maxEms="20"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/search_et_cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@mipmap/clean"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            style="@style/TopTextStyle"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="移动执法查询系统" />

        <TextView

            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/linearLayout3"
            android:layout_alignStart="@+id/linearLayout3"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="70dp"
            android:background="@drawable/edit_title"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="企业名称查询"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/shaoma"
            android:layout_alignBottom="@+id/linearLayout3"
            android:layout_toRightOf="@+id/linearLayout3"
            android:layout_toEndOf="@+id/linearLayout3"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />
    </RelativeLayout>

</LinearLayout>